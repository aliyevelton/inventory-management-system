@model IEnumerable<Inventory_Management_System.Models.Brand>
@{
    ViewData["Title"] = "Brand List";
}
@Html.AntiForgeryToken()
<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Brand List</h4>
            <h6>Manage your Brand</h6>
        </div>
        <div class="page-btn">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-added">
                <img src="~/assets/img/icons/plus.svg" class="me-2" alt="img">Add Brand
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-top">
                <div class="search-set">
                    <div class="search-input">
                        <a class="btn btn-searchset"><img src="~/assets/img/icons/search-white.svg" alt="img"></a>
                    </div>
                </div>
                <div class="wordset">
                
                </div>
            </div>

            <div class="card" id="filter_inputs">
                <div class="card-body pb-0">
                    <div class="row">
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="text" placeholder="Enter Brand Name">
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="text" placeholder="Enter Brand Description">
                            </div>
                        </div>
                        <div class="col-lg-1 col-sm-6 col-12 ms-auto">
                            <div class="form-group">
                                <a class="btn btn-filters ms-auto"><img src="~/assets/img/icons/search-whites.svg" alt="img"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table datanew">
                    <thead>
                        <tr>
                            <th>
                                <label class="checkboxs">
                                    <input type="checkbox" id="select-all">
                                    <span class="checkmarks"></span>
                                </label>
                            </th>
                            <th>Image</th>
                            <th>Brand Name</th>
                            <th>Brand Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model)
                        {
                            if (!brand.IsDeleted)
                            {
                                <tr>
                                    <td>
                                        <label class="checkboxs">
                                            <input type="checkbox">
                                            <span class="checkmarks"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <a class="product-img">
                                            <img src="~/assets/img/brand/@(brand.Logo ?? "default.png")" alt="product" />
                                        </a>
                                    </td>
                                    <td>@brand.Name</td>
                                    <td>@brand.Description</td>
                                    <td>
                                        <a class="me-3" asp-controller="Brand" asp-action="Update" asp-route-id="@brand.Id">
                                            <img src="~/assets/img/icons/edit.svg" alt="Edit">
                                        </a>
                                        <a class="me-3 confirm-text" href="javascript:void(0);" data-id="@brand.Id">
                                            <img src="~/assets/img/icons/delete.svg" alt="Delete">
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.confirm-text').click(function () {
                var brandId = $(this).data('id');
                var token = $('input[name="__RequestVerificationToken"]').val();  // get token from hidden input

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to undo this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Brand/Delete/' + brandId,
                            type: 'POST',
                            headers: {
                                'RequestVerificationToken': token
                            },
                            success: function () {
                                Swal.fire({
                                    title: 'Deleted!',
                                    text: 'Brand has been deleted.',
                                    icon: 'success',
                                    confirmButtonText: 'OK'
                                }).then(() => {
                                    location.reload();
                                });
                            },
                            error: function () {
                                Swal.fire(
                                    'Error!',
                                    'Could not delete the brand.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });
        });
    </script>
}
